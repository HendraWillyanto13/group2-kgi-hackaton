# Azure Computer Vision Configuration
VISION_ENDPOINT=https://your-computer-vision-resource.cognitiveservices.azure.com/
VISION_KEY=your_computer_vision_api_key_here

# Azure OpenAI Configuration (Required for PDF Embeddings)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-embedding-deployment-name
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# Optional: Azure OpenAI Model Configuration
AZURE_OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
AZURE_OPENAI_MAX_TOKENS=8191

# Other environment variables can be added here